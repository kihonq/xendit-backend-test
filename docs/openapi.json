{
  "openapi": "3.0.3",
  "servers": [
    {
      "url": "http://localhost:8010/",
      "description": "Local server"
    }
  ],
  "info": {
    "title": "Rides API",
    "version": "1.0.0"
  },
  "components": {
    "schemas": {
      "Ride": {
        "type": "object",
        "required": [
          "rideID",
          "startLat",
          "startLong",
          "endLat",
          "endLong",
          "riderName",
          "driverName",
          "driverVehicle",
          "created"
        ],
        "properties": {
          "rideID": {
            "type": "integer",
            "example": 1
          },
          "startLat": {
            "type": "number",
            "example": -90.123,
            "format": "double"
          },
          "startLong": {
            "type": "number",
            "example": -179.0909,
            "format": "double"
          },
          "endLat": {
            "type": "number",
            "example": 90.9191,
            "format": "double"
          },
          "endLong": {
            "type": "number",
            "example": 179.4321,
            "format": "double"
          },
          "riderName": {
            "type": "string",
            "example": "Mbah Buyut"
          },
          "driverName": {
            "type": "string",
            "example": "Widya"
          },
          "driverVehicle": {
            "type": "string",
            "example": "Sepeda"
          },
          "created": {
            "type": "string",
            "example": "2022-05-17 14:28:32"
          }
        }
      },
      "RideBody": {
        "type": "object",
        "required": [
          "startLat",
          "startLong",
          "endLat",
          "endLong",
          "riderName",
          "driverName",
          "driverVehicle"
        ],
        "properties": {
          "startLat": {
            "type": "number",
            "format": "double",
            "example": -90.123
          },
          "startLong": {
            "type": "number",
            "format": "double",
            "example": -179.0909
          },
          "endLat": {
            "type": "number",
            "format": "double",
            "example": 90.9191
          },
          "endLong": {
            "type": "number",
            "format": "double",
            "example": 179.4321
          },
          "riderName": {
            "type": "string",
            "example": "Mbah Buyut"
          },
          "driverName": {
            "type": "string",
            "example": "Widya"
          },
          "driverVehicle": {
            "type": "string",
            "example": "Sepeda"
          }
        }
      },
      "NOT_FOUND": {
        "type": "object",
        "properties": {
          "error_code": {
            "type": "string",
            "const": "RIDES_NOT_FOUND_ERROR"
          },
          "message": {
            "type": "string",
            "const": "Could not find any rides"
          }
        }
      },
      "VALIDATION_ERROR": {
        "type": "object",
        "properties": {
          "error_code": {
            "type": "string",
            "const": "VALIDATION_ERROR"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  },
  "paths": {
    "/health": {
      "get": {
        "operationId": "health",
        "summary": "Get health status",
        "responses": {
          "200": {
            "description": "Response for when the service is up",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string",
                  "const": "Healthy"
                },
                "example": "Healthy"
              }
            }
          }
        }
      }
    },
    "/rides": {
      "get": {
        "operationId": "rides",
        "summary": "Get list of rides",
        "responses": {
          "200": {
            "description": "List of rides",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Ride"
                  }
                }
              }
            }
          },
          "404": {
            "description": "No ride can be found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NOT_FOUND"
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "createRide",
        "summary": "Create a new ride",
        "requestBody": {
          "description": "Ride to be created",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RideBody"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Created ride",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Ride"
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/VALIDATION_ERROR" }
              }
            }
          }
        }
      }
    },
    "/rides/:id": {
      "get": {
        "operationId": "ride",
        "summary": "Get a ride by ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "description": "Ride ID",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Ride with the ID",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Ride"
                }
              }
            }
          },
          "404": {
            "description": "No ride can be found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NOT_FOUND"
                }
              }
            }
          }
        }
      }
    }
  }
}
